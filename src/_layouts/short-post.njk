---
layout: base.njk
---

<article class="post short-post">
    <div class="post-content">
        {{ content | safe }}
    </div>
    {% if tags %}
    <div class="post-tags">
        {% for tag in tags %}
        <span class="tag">{{ tag }}</span>
        {% endfor %}
    </div>
    {% endif %}
    <footer class="post-meta">
        <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
    </footer>
</article> 